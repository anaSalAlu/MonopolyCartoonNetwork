   <center>
      <AnchorPane maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" styleClass="main-background" stylesheets="@../css/Home.css" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="imgProfilePhoto" fitHeight="200.0" fitWidth="200.0" layoutX="26.0" layoutY="42.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="btnSaveProfile" layoutX="433.0" layoutY="482.0" mnemonicParsing="false" onAction="#saveProfile" prefHeight="45.0" prefWidth="197.0" styleClass="main-buttons" text="Guardar" />
            <Button fx:id="btnEditNickname" layoutX="548.0" layoutY="168.0" mnemonicParsing="false" onAction="#editName" prefHeight="42.0" prefWidth="119.0" styleClass="main-buttons" text="Editar" />
            <Button fx:id="btnEditProfilePhoto" layoutX="72.0" layoutY="258.0" mnemonicParsing="false" onAction="#editPhoto" prefHeight="42.0" prefWidth="109.0" styleClass="main-buttons" text="Editar" />
